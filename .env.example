# Environment configuration for Insyte AI
# Copy this file to .env and customize as needed

# Database settings
DATABASE_PATH=data/database/insyte.db

# Model settings
LLM_MODEL_NAME=tiiuae/falcon-rw-1b
WHISPER_MODEL_SIZE=base
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Search settings
FAISS_INDEX_PATH=data/database/faiss_index.bin

# Performance settings
USE_GPU=auto
USE_4BIT_QUANTIZATION=true
MAX_RESPONSE_LENGTH=512

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/insyte.log

# Dashboard settings
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
